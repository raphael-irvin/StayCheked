<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <center>
        <VBox alignment="CENTER" fillWidth="false" spacing="10.0">
            <Label alignment="CENTER" prefHeight="26.0" prefWidth="184.0" styleClass="header-label" text="Active Support Tickets">
            <font>
               <Font name="System Bold Italic" size="17.0" />
            </font></Label>
            <TableView fx:id="activeTicketTable" prefHeight="400.0" prefWidth="600.0">
                <columns>
                    <TableColumn fx:id="idColumn" prefWidth="100" text="Ticket ID" />
                    <TableColumn fx:id="subjectColumn" prefWidth="200" text="Subject" />
                    <TableColumn fx:id="statusColumn" prefWidth="100" text="Status" />
                    <TableColumn fx:id="dateColumn" prefWidth="150" text="Date Submitted" />
                    <TableColumn fx:id="actionColumn" prefWidth="50" text="Action" />
                </columns>
            </TableView>
        </VBox>
    </center>
</BorderPane>
