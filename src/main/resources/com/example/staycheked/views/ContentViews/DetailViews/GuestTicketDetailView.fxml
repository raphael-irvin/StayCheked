<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane styleClass="ContentBackground" stylesheets="@../../../css/Main.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <center>
        <VBox spacing="20.0">
         <VBox>
            <children>
               <Label fx:id="ticketIdLabel" alignment="TOP_CENTER" styleClass="header-label" text="(Ticket ID)">
                  <font>
                     <Font name="System Italic" size="14.0" />
                  </font>
               </Label>
                  <Label fx:id="subjectLabel" alignment="TOP_CENTER" styleClass="header-label" text="[Ticket Title]">
                  <font>
                     <Font name="System Bold Italic" size="22.0" />
                  </font>
               </Label>
               <Label fx:id="lastUpdatedLabel" alignment="TOP_CENTER" styleClass="header-label" text="Last updated at [DateTime]">
                  <font>
                     <Font name="System Italic" size="16.0" />
                  </font>
               </Label>
            </children>
         </VBox>
         <ScrollPane fitToWidth="true" maxHeight="300.0" maxWidth="728.0">
            <content>
               <VBox fx:id="messageContainer" spacing="10.0" style="-fx-background-color: transparent;" styleClass="ContentBackground" />
            </content>
         </ScrollPane>
         <VBox spacing="10.0">
            <children>
               <TextField fx:id="responseField" alignment="TOP_LEFT" maxWidth="728.0" prefHeight="25.0" prefWidth="728.0" promptText="Please input your queries/response" />
               <HBox spacing="10.0">
                  <children>
                     <Button fx:id="sendResponseButton" alignment="CENTER" mnemonicParsing="false" text="Send" />
                     <Button fx:id="closeTicketButton" alignment="CENTER" layoutX="159.0" layoutY="10.0" mnemonicParsing="false" text="Close Ticket" />
                  </children>
               </HBox>
            </children>
         </VBox>
         <BorderPane.margin>
            <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
         </BorderPane.margin>
        </VBox>
    </center>
</BorderPane>
